<%= render :partial => 'shared/order_tabs', :locals => {:current => "Credit Cards"} %>
<table class="admin-report">
  <tr>
    <th><%= t("cc_number") %></th>
    <th><%= t("type") %></th>
    <th><%= t("expiration") %></th>
    <th><%= t("name") %></th>   
  </tr>
  <tr>
		<td><%= @creditcard.display_number %></td>
		<td><%= @creditcard.cc_type.titleize %></td>
		<td><%= "#{@creditcard.month}/#{@creditcard.year}" %></td>
		<td><%= "#{@creditcard.first_name} #{@creditcard.last_name}" %></td>
  </tr>
</table>
<br/>
<b><%=t('billing_address')%>: </b><br/>
<%= render :partial => 'shared/address', :locals => {:address => @creditcard.address} %>
<br/>
<b>Credit Card Info: </b><br/>
<%= @creditcard.encrypted_text.to_s %><br/>
<br/>
<%= link_to t("list"), collection_url %>
